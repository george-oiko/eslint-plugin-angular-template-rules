{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "src/rules/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}